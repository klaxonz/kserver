<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.klaxon.kserver.mapper.WebPageVideoTaskMapper">

    <select id="queryVideoDownloadedSize" resultType="long">
        select sum(video_downloaded_length) + sum(audio_downloaded_length) from t_web_page_video_task
        where task_id = #{taskId}
    </select>

</mapper>